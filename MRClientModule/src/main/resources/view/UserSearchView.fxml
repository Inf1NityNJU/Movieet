<?xml version="1.0" encoding="UTF-8"?>

<?import component.modeimageview.ModeImageView?>
<?import component.topmenu.TopMenu?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<ScrollPane fx:id="root" hbarPolicy="NEVER" prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #ffffff00;" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.viewcontroller.UserSearchViewController">
    <content>
        <VBox fx:id="contentVBox" prefWidth="1002.0" spacing="40.0" style="-fx-background-color: transparent;">
            <padding>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
            </padding>
            <children>

                <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      prefWidth="1000.0" spacing="20.0" styleClass="card">
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
                    </padding>
                    <children>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label styleClass="card-title" text="User"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <TextField id="search-text-field" fx:id="searchField" prefWidth="300.0"
                                           promptText="User id">
                                    <font>
                                        <Font name="Avenir Book" size="14.0"/>
                                    </font>
                                </TextField>
                                <Button fx:id="searchButton" mnemonicParsing="false" onMouseClicked="#clickSearchButton"
                                        styleClass="search-button" text="Search"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox fx:id="infoPane" prefWidth="100.0" spacing="20" styleClass="card">
                    <children>
                        <AnchorPane minWidth="920.0">
                            <children>
                                <ModeImageView fx:id="avatarImageView" fitHeight="200.0" fitWidth="200.0"
                                               AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                <Label fx:id="nameLabel" layoutX="315.0" layoutY="66.0" text="User Name"
                                       textFill="#598385" AnchorPane.leftAnchor="240.0" AnchorPane.topAnchor="0.0">
                                    <font>
                                        <Font name="Avenir Light" size="24.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="reviewAmountLabel" layoutX="315.0" layoutY="101.0" text="review amount"
                                       textFill="#6ed3d8" AnchorPane.leftAnchor="340.0" AnchorPane.topAnchor="80.0">
                                    <font>
                                        <Font name="Avenir Heavy" size="18.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="249.0" layoutY="85.0" text="review amount" textFill="GREY"
                                       AnchorPane.leftAnchor="240.0" AnchorPane.topAnchor="84.0">
                                    <font>
                                        <Font name="Avenir Book" size="14.0"/>
                                    </font>
                                </Label>
                                <HBox fx:id="wordsHBox" layoutX="233.0" layoutY="107.0" spacing="10.0"
                                      AnchorPane.leftAnchor="240.0" AnchorPane.topAnchor="120.0"/>
                            </children>
                        </AnchorPane>
                        <TopMenu fx:id="otherMenu" lineWidth="920.0" onItemChanged="#clickMenuItem">
                            <labels>
                                <Label text="Reviews"/>
                                <Label text="Statistic"/>
                            </labels>
                        </TopMenu>
                        <StackPane fx:id="contentPane">
                            <children>
                                <VBox fx:id="statisticVBox" spacing="20.0">
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
                    </padding>
                </VBox>
            </children>
        </VBox>
    </content>
    <padding>
        <Insets bottom="39.0" left="39.0" right="20.0" top="39.0"/>
    </padding>
</ScrollPane>
